$color-bg = rgb(238, 238, 238);
$color-accent = rgb(219, 219, 219);
html {background: $color-bg}
/*top menu breaks at 428px, make margin-top larger when < 427px */
body {margin-top: 60px;color:#333333;text-shadow: 0px 1px 1px #FFFFFF;}
@media all and (max-width:427px) {
	body {margin-top: 100px;}
}
html,body {
	font-family: 'Lato', sans-serif;
}
a {
	color:#3f3f3f;
	text-decoration: none;
	font-size: 13px;
}
h2 {
	font-family: 'Asap', sans-serif;
	font-size: 14px;
}
h3 {
	font-family: 'Asap', sans-serif;
	font-size: 13px;
}
hr {
	 height:1px;
	 color:$color-accent;
	 background-color: $color-accent;
	 border-width:0;
}
button {
	border: solid 1px $color-accent;
	line-height: 21px;
}
#menu ul {
	list-style-type:none;
	margin:0;
	padding:0;
}
#menu li {
	float:left;
}
#menu .selected {
	border-bottom: 4px solid $color-accent;
}
#menu a {
	font-family: 'Asap', sans-serif;
	display:block;
	font-size: 20px;
	/*width:60px;	*/
	/*top right bottom left*/
	padding: 10px 20px 10px 0px;
}
.container {
	margin: 0 auto 0;
	max-width: 900px;
}
#header-fixed {position:fixed; top:0px;z-index:100000; width:100%;background: $color-bg;border-bottom: 1px solid $color-accent;}
#menu  {height:40px;}

.status-fixed {position:fixed; top:50px;z-index:100000;}

.artistAlbum {
	font-size: 13px;
}
/* text-overflow affects block, span is not block default */
.artistAlbumGrid {
	font-size: 13px;
	text-overflow:ellipsis;
	overflow:hidden;
	width: 128px;
	white-space:nowrap;
}
.albumCover {
	width: 128px;
	height:128px;
}
ul {margin-left: 0px;}
ul.list {
	padding: 0px;
    display: table;
    border-collapse: collapse;
    text-transform:capitalize;
}
ul.list li {
    display: table-row;
	border-bottom: 1px solid $color-accent;
	/*background: -webkit-gradient(linear, 0 0, 0 bottom, from(#fcfcfc), to(#ECEBE8));
	background: -moz-linear-gradient(top,  #fcfcfc,  #ECEBE8);*/
}
ul.list li > * {
    display: table-cell;
    vertical-align: middle;
    font-size: 13px;
    padding: 3px;
}
ul.grid {
	padding: 0px;
    list-style: none;
    text-transform:capitalize;
}
ul.grid li {
	padding: 3px;
	float: left;
}
.info {border: 1px solid $color-accent;background:rgb(180, 235, 186);}
.error {border: 1px solid $color-accent;background: rgb(235, 180, 180);}
.cleared { clear:both }
